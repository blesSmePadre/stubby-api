datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  @@map("users")

  id    Int     @default(autoincrement()) @id
  email String  @unique
  password String
  salt String
  confirmationCode String
  confirmedAt DateTime?
}