{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "users/*": ["src/users/*"],
      "decorators/*": ["src/common/decorators/*"],
      "common/*": ["src/common/*"],
      "config/*": ["src/config/*"],
      "auth/*": ["src/auth/*"],
      "shared/*": ["src/shared/*"],
      "notifications/*": ["src/notifications/*"],
      "@types": ["src/types"]
    }
  }
}
